#!/bin/sh

set -e

case "$1" in
    purge)
        userdel hpassword || true
        rm -rf /var/lib/hpassword /var/log/hpassword \
               /var/run/hpassword /var/cache/hpassword
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
